<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Theme.AppCompat.NoActionBar.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

   <style name="Air_quality_style">
    <item name="android:textColor"> @color/black</item>
       <item name="android:fontFamily">monospace </item>
   </style>

    <style name="mainstyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- This is the styling for action bar -->
        <item name="android:navigationBarColor">@color/dark_grey</item>
    </style>

    <style name="BinpProgressBar">
        <item name="android:indeterminateOnly"> false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="AQ_Pollutants_type">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="AQ_Pollutants_value">
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>